<p id="notice"><%= notice %></p>

<h1>Sprints</h1>
<h3>Project: <%= @project.name %> - Phase: <%= @phase.name %></h3>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Completed</th>
      <th>ID</th>
    </tr>
  </thead>

  <tbody>
    <% @sprints.each do |sprint| %>
      <tr>
        <td><%= sprint.name %></td>
        <td><%= sprint.start_date %></td>
        <td><%= sprint.end_date %></td>
        <td><%= sprint.completed %></td>
        <td><%= link_to 'Show', project_phase_sprint_path(@project.id, @phase.id, sprint) %></td>
        <td><%= link_to 'Edit', edit_project_phase_sprint_path(@project.id, @phase.id, sprint) %></td>
        <td><%= link_to 'Destroy', project_phase_sprint_path(@project.id, @phase.id, sprint), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sprint', new_project_phase_sprint_path(@project.id, @phase.id) %>
