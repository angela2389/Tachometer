<p id="notice"><%= notice %></p>

<div class="phase_overview">
  <h2>Sprints in <%= @phase.name %></h2>
  <% if @phase.sprints.length > 0 %>
    <table class="phase_table">
      <tr class="top_row">
        <th>ID</th>
        <th>Phase</th>
        <th>Start date</th>
        <th>End date</th>
      </tr>
      <% @phase.sprints.order(:id).each do |sprint| %>
        <tr>
          <th><%= sprint.id %></th>
          <th><%= link_to sprint.name, project_phase_sprint_path(project_id: @phase.project.id, phase_id: @phase.id, id: sprint.id ) %></th>
          <th><%= sprint.start_date.strftime("%d %B %Y") %></th>
          <th><%= sprint.end_date.strftime("%d %B %Y") %></th>
        </tr>
      <% end %>
    </table>
    <%= link_to('Create new strint', new_project_phase_sprint_path(project_id: @phase.project.id, phase_id: @phase.id), :class => 'btn btn-large btn-success')  %>
  <% else %>
    <p> No sprints added yet</p>
    <%= link_to('Create first strint', new_project_phase_sprint_path(project_id: @phase.project.id, phase_id: @phase.id), :class => 'btn btn-large btn-success')  %>
  <% end %>
</div>
