<p id="notice"><%= notice %></p>

<h1>Experiments for Project: <%= @project.name %> - Phase: <%= @phase.name %></h1>
<br>
<% if @experiments.empty?%>
  <p>There are no experiments</p>
<% else %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @experiments.each do |experiment| %>
      <tr>
        <td><%= experiment.name %></td>
        <td><%= experiment.start_date %></td>
        <td><%= experiment.end_date %></td>
        <td><%= experiment.completed %></td>
        <td><%= link_to 'Show', project_phase_experiment_path(@project.id, @phase.id, experiment) %></td>
        <td><%= link_to 'Edit', edit_project_phase_experiment_path(@project.id, @phase.id, experiment.id) %></td>
        <td><%= link_to 'Destroy', project_phase_experiment_path(@project.id, @phase.id, experiment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>


<br>

<%= link_to 'New Experiment', new_project_phase_experiment_path(@project.id, @phase.id) %>
