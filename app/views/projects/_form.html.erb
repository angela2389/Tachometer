<div class="container">
  <%= form_for(project) do |f| %>
    <% if project.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

        <ul>
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class:"form-control"%>
    </div>

    <div class="field form_group">
      <%= f.label :portfoliomanager_id %>
      <%= f.collection_select(:portfoliomanager_id, User.where(role: 'portfoliomanager'), :id, :first_name) %>
    </div>

    <div class="field form_group">
      <%= f.label :coach_id %>
      <%= f.collection_select(:coach_id, User.where(role: 'coach'), :id, :first_name) %>
    </div>

    <%= f.hidden_field :active, :value => TRUE %>

    <% if project.new_record? %>
      <%= f.fields_for :phases do |m| %>
       <div class="field form-group">
         <%= m.label 'Current phase' %>
         <%= m.select :sequence, Project.get_list_of_phases %>
       </div>
      <% end %>
    <% end %>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
